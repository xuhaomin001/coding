package xuhaomin;

public class ex2 {
	public static void print (int n) {
		for (int i=n;i>0;i--) {
			for(int j=n-i;j>0;j--) {
				System.out.print("#"+" ");
			}
		System.out.println("");
		}
		for (int i=0;i<=n;i++) {
			for(int j=0;j<i;j++) {
				System.out.print("*"+" ");
			}
		System.out.println("");
		}
	}
	public static void main(String[] args) {
		// TODO Auto-generated method stub
		int n=9;
		print(n);

	}

}
